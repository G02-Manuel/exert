<odoo>
    <record id="hr_employee_inherit_form" model="ir.ui.view">
        <field name="name">hr_employee_inherit.form</field>
        <field name="model">hremployee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet/form/field[@name='company_id']" position="after">
                <field name="id_card" />
            </xpath>
            <xpath expr="//sheet/form/field[@name='coach_id']" position="after">
                <field name="driving_license" />
            </xpath>
        </field>
    </record>
</odoo>